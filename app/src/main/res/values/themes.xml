<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Fit" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/pink_main</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_main</item>
        <item name="colorPrimaryVariant">@color/blue_main</item>
        <item name="colorOnPrimary">@color/pink_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_main</item>
        <item name="colorSecondaryVariant">@color/purple_main</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
    
    <style name="Theme.Fit.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fit.Switch">
        <item name="colorControlActivated">@color/main_switch</item>
    </style>

    <style name="Theme.Fit.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">10sp</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Theme.Fit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Fit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Theme.Fit.Button" />
</resources>